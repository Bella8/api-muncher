<section class="show-body">
  <div class="row">
    <div class="small-12 medium-6 large-6 columns" class="float-left">
      <ul>
        <li><%= image_tag @recipe[0]["image"] %></li>
      </ul>
    </div>

    <div class="small-12 medium-6 large-6 columns" class="float-right">
      <h3><%= @recipe[0]["label"]%></h3>
      <small>See full recipe on: <%=link_to @recipe[0]["source"], @recipe[0]["url"]%></small>
      <br>
      <br>
    </div>
  </div>
</section>

<section class="show-body">
  <div class="row">
    <div class="small-12 medium-6 large-5 columns" >
      <ul>
        <h5>INGREDIENTS</h5><hr>
        <% @recipe[0]["ingredientLines"].each do |r|%>
        <li><%= r %></li>
        <% end  %>
        <br>

      </ul>
    </div>

    <div class="small-12 medium-6 large-6 columns" >
      <ul>
        <% if !(@recipe[0]["calories"] == nil) %>
        <h6>CALORIES</h6>
        <small><%= @recipe[0]["calories"].to_i %></small>
        <% end %>
        <br> <br>
        <h6>HEALTH LABELS</h6>
        <% if !(@recipe[0]["healthLabels"].empty?) %>
        <% @recipe[0]["healthLabels"].each do |health_labels|%>
        <small><li><%= health_labels %></li></small>
        <% end  %>
        <% else %>
        <li>Sorry no health information was provided for this recipe.</li>
        <% end  %>
      </ul>
    </div>
  </div>
</section>
